<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.main.MainFragment">

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <Button
                android:id="@+id/add_home_pin_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/add_pin" />

            <Button
                android:id="@+id/add_pin_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/add_pin_here" />

            <Button
                android:id="@+id/remove_pin_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/remove_pin" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <Button
                android:id="@+id/highlight_pin_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/highlight" />

            <Button
                android:id="@+id/unhighlight_pin_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/unhighlight" />
        </LinearLayout>

    </LinearLayout>

</layout>